@{
  var titulo = ViewData["TituloMapa"] as string ?? "Página";
  var breadcrumbs = ViewData["MapaSite"] as List<(string Texto, string? Url)>;
  var mapaComBotao = ViewData["MapaComBotao"] as bool? ?? false;
  var nomeBotao = ViewData["NomeBotao"] as string;
}

@if (mapaComBotao is false)
{
  <div class="page-header d-print-none" aria-label="Page header">
    <div class="container-xl">
      <div class="row g-2 align-items-center">
        <div class="col">
          <h2 class="page-title">@titulo</h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
          <div class="d-flex">
            <ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
              @foreach (var item in breadcrumbs)
              {
                if (!string.IsNullOrWhiteSpace(item.Url))
                {
                  <li class="breadcrumb-item active" aria-current="page">
                    <a href="@item.Url">@item.Texto</a>
                  </li>
                }
                else
                {
                  <li class="breadcrumb-item">
                    <a href="#">@item.Texto</a>
                  </li>
                }
              }

            </ol>
          </div>
        </div>
      </div>
    </div>
  </div>
}
else
{
  <div class="page-header d-print-none" aria-label="Page header">
    <div class="container-xl">
      <div class="row g-2 align-items-center">
        <div class="col">
          <!-- Page pre-title -->
          <h2 class="page-title">@titulo</h2>
        </div>
        <!-- Page title actions -->
        <div class="col-auto ms-auto d-print-none">
          <div class="btn-list">
            <a href="#" class="btn btn-primary btn-5 d-none d-sm-inline-block" data-bs-toggle="modal"
               data-bs-target="#modal-report">
              <!-- Download SVG icon from http://tabler.io/icons/icon/plus -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-2"
              >
                <path d="M12 5l0 14"/>
                <path d="M5 12l14 0"/>
              </svg>
              @nomeBotao
            </a>

          </div>
          <!-- BEGIN MODAL -->
          <!-- END MODAL -->
        </div>
      </div>
    </div>
  </div>
}


